
# For windows we need to call some .cmd files otherwise the version checks fail.

[host_machine]
system = 'android'
cpu_family = 'arm'
cpu = 'aarch64'
endian = 'little'

[properties]
needs_exe_wrapper = true
cpp_args = ['-Dandroid']
cpp_link_args = ['-llog', '-static-libstdc++']

[binaries]
c = 'aarch64-linux-android-clang.cmd'
cpp = 'aarch64-linux-android-clang++.cmd'
ar = 'aarch64-linux-android-ar'
strip = 'aarch64-linux-android-strip'
ld = 'aarch64-linux-android-ld'
ranlib = 'aarch64-linux-android-ranlib'
as = 'aarch64-linux-android-as'


